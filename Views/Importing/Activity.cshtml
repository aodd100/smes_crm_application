@section Scripts {


    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/mustache.min.js"></script>
    <script src="~/Scripts/handlebars.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $(".loader").css("display", "none");
        });
        $(function () {
            $(document).ajaxStart(function () {
                $(".loader").css("display", "block");
            });

            $(document).ajaxComplete(function () {
                $(".loader").css("display", "none");
            });

            $(".save").on('click', function (e) {

                $(".loader").css("display", "block");

                //var form = $("#SendMailForm")[0];
                $.ajaxSetup({ cache: false });

                var result = true;
                var form = $(form);
                $.ajaxSetup({ cache: false });
                              
                $.ajax({
                    type: 'POST',
                    url: $(form)[0].action,
                    processData: false,
                    contentType: false,
                    success: function (response) {
                        if (response.success) {
                            $.notify(response.message, "success");

                        } else {
                            $.notify(response.message, "error");

                        }
                    }
                });
                return false;                              
            });
        });

        (function () {
            $("#excelltr").css("display", "none");
        });

        function ExcellUpload(e) {
            Handlebars.registerHelper('formatDate', function (dateString) {
                return new Handlebars.SafeString(
                    moment(dateString).format("MM/D/Y").toUpperCase()
                );
            });


            var theTemplateScript = $("#addresstemplate").html();
            var theTemplate = Handlebars.compile(theTemplateScript);

            var data = new FormData();
            var files = $("#txtUploadFile").get(0).files;
            if (files.length > 0) {
                data.append("File", files[0]);
            }
            var mailType = $("#mailType");
            var Email = $("#Email");
            $(mailType).html("");
            $(Email).html("");
            var option = '<option value="-1">Wait Loading...</option>';
            $(option).appendTo($(mailType))
            $.ajax({
                type: "POST",
                url: "/Importing/UploadActivities",
                processData: false,
                contentType: false,
                data: data,
                success: function (response) {
                    context = [];
                    $(mailType).html("");
                    $(Email).html("");
                    if (response.data) {
                        var html = theTemplate(response);
                        $('#contentplaceholder').html(html);
                    } else {
                        $.notify(response.message, "error");
                    }

                }
            });

        }

        function ConvertJsonDateString(jsonDate) {
            var shortDate = null;
            if (jsonDate) {
                var regex = /-?\d+/;
                var matches = regex.exec(jsonDate);
                var dt = new Date(parseInt(matches[0]));
                var month = dt.getMonth() + 1;
                var monthString = month > 9 ? month : '0' + month;
                var day = dt.getDate();
                var dayString = day > 9 ? day : '0' + day;
                var year = dt.getFullYear();
                shortDate = monthString + '-' + dayString + '-' + year;
            }
            return shortDate;
        };
    </script>

}




