    <a class="sidebtn" id="crm" href="/Events/create">New Event</a>
    <a class="sidebtn" ID="hr">Advance Search</a>
}*@
    <table width="100%" cellspacing="0" cellpadding="0" border="0">
        <tbody>
            <tr>
                <td class="pageTitle" valign="top" align="left">
                    Manage Appointment
                </td>
            </tr>
        </tbody>
    </table>
    <div id="tabberpage " class="form-horizontal">
        
        <div class="topDiv">
            <div class="topDivSub1">
                <h4>Event Creation</h4>
            </div>
            <div class="topDivSub2" style="text-align: right; margin-right: 13px;">
                @Html.ActionLink("Last searched", "index", new { @class = "save" })
            </div>
        </div>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Subject, new { @style = "flex: 1;" })
            <div class="col-md-10" style="flex:3;text-align:left;border-bottom: dashed 1px #676878;">
                @Html.DisplayFor(model => model.Subject)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @style = "flex: 1" })
            <div class="col-md-10" style="flex:3;text-align:left;border-bottom: dashed 1px #676878;">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Start, new { @style = "flex: 1" })
            <div class="col-md-10" style="flex:3;text-align:left;border-bottom: dashed 1px #676878;">
                @Html.DisplayFor(model => model.Start)

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.End, new { @style = "flex: 1" })
            <div class="col-md-10" style="flex:3;text-align:left;border-bottom: dashed 1px #676878;">
                @Html.DisplayFor(model => model.End)

            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ThemeColor, new { @style = "flex: 1" })
            <div class="col-md-10" style="flex:3;text-align:left;border-bottom: dashed 1px #676878;">
                @Html.DisplayFor(model => model.ThemeColor)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IsFullDay, new { @style = "flex:1" })
            <div class="col-md-10" style="flex:3;text-align:left;border-bottom: dashed 1px #676878;">
                <div class="checkbox">
                    @Html.DisplayFor(model => model.IsFullDay)
                </div>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            </div>
        </div>
    </div>


