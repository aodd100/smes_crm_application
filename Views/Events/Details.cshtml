@model db.crmdb.dbData.mEvent

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutAdminPage.cshtml";
    <style>
        #tabberpage .form-group {
            display: flex;
        }
        #tabberpage .form-group label {
            flex: 1;
        }
        #tabberpage .form-group .col-md-10 {
            flex: 3;
        }
    </style>
}

