                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="LeadeBySourceChart" style="width: 244px;height: 414px;display: block;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Leads By Owner</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="LeadeByOwner" style="width: 244px;height: 414px;display: block;"></canvas>
                    </div>
                </div>
            </div>


        </div>
        <div class="clearfix"></div>
        <br />
        <div class="page-title">
            <div class="title_left">
                <h3>Sales Revenues</h3>
            </div>

            <div class="title_right">

            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Revenue By Months</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="LeadeRevenueChart" style="width: 244px;height: 414px;display: block;"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <br />
    </div>

</div>

@section Scripts
{
    <script src="~/js/chart/Chart.js"></script>
    <script src="~/js/chart/Common.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            //----Line Chart---------
            var lnc = document.getElementById("barChart");
            var lncCtx = lnc.getContext("2d");
            var lnctData = $.getValues("/Dashboard/lineChartData");
            var myPieChart = new Chart(lncCtx, {
                type: 'bar',
                data: lnctData,
                options: {
                    maintainAspectRation: false,
                    scales: {
                        xAxes:
                            [{
                                ticks:
                                {
                                    beginAtZero: true
                                }
                            }]
                    },
                    legend: {
                        display: false
                    }
                }
            });

            //----Leade By Source Chart---------
            var dn = document.getElementById("LeadeBySourceChart");
            var dnctx = dn.getContext("2d");
            var dntData = $.getValues("/Dashboard/LeadeBySourceData");
            var myLeadeBySourceChart = new Chart(dnctx, {
                type: 'doughnut',
                data: dntData
            });


            //----Leade By Owner Chart---------
            var lnc = document.getElementById("LeadeByOwner");
            var lncCtx = lnc.getContext("2d");
            var lnctData = $.getValues("/Dashboard/LeadeByOwnerData");
            var myLeadeByUser = new Chart(lncCtx, {
                type: 'bar',
                data: lnctData,
                options: {
                    maintainAspectRation: false,
                    scales: {
                        xAxes:
                            [{
                                ticks:
                                {
                                    beginAtZero: true
                                }
                            }]
                    },
                    legend: {
                        display: false
                    }
                }
            });


            //----Leade Revenue Chart---------
            var lnc = document.getElementById("LeadeRevenueChart");
            var lncCtx = lnc.getContext("2d");
            var lnctData = $.getValues("/Dashboard/LeadeByUserData");
            var myPieChart = new Chart(lncCtx, {
                type: 'bar',
                data: lnctData,
                options: {
                    maintainAspectRation: false,
                    scales: {
                        xAxes:
                            [{
                                ticks:
                                {
                                    beginAtZero: true
                                }
                            }]
                    },
                    legend: {
                        display: false
                    }
                }
            });
        });
    </script>
}