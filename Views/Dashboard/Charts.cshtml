
@{
    ViewBag.Title = "Charts";
    Layout = "~/Views/_LayoutAdminPage.cshtml";
    <style type="text/css">
        #chart_sm_container {
            width: 200px;
            height: 200px;
            border: solid 1px #ddd;
            padding: 1px;
            border-radius: 4px;
        }

        #chart_container {
            width: 400px;
            height: 400px;
            border: solid 1px #ddd;
            padding: 1px;
            border-radius: 4px;
        }

        .x_title h2 {
            width: 100%;
            font-size: 15px;
        }

        .x_content.Chart label {
            display: inline-block;
            max-width: 100%;
            margin-bottom: 5px;
            font-weight: 700;
            font-size: 39px;
            text-align: center;
        }
    </style>
}

<div class="right_colInner" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Chart Overview</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">

                </div>
            </div>
        </div>
        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12" style="width:171px;">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Total Users</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content Chart">
                        <label id="UserChart" style="width: 100%; height: 100%;">@ViewBag.User</label>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12" style="width:189px">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Total Companies</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content Chart">
                        <label id="CompChart" style="width: 100%; height: 100%;">@ViewBag.Company</label>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12" style="width:171px">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Total Leads</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content Chart">
                        <label id="LeadsChart" style="width: 100%; height: 100%;">@ViewBag.Leads</label>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12" style="width:201px">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Total Opportunities</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content Chart">
                        <label id="OpprtChart" style="width: 100%; height: 100%;">@ViewBag.Opportunities</label>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12" style="width: 168px">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Total Contacts</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content Chart">
                        <label id="polarArea" style="width: 100%; height: 100%;">@ViewBag.Contact</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
        <br />
        <div class="page-title">
            <div class="title_left">
                <h3>Sales charts</h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Bar Graph</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <canvas id="barChart" style="width: 244px;height: 414px;display: block;"></canvas>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Leads By Source </h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a href="#">Settings 1</a>
