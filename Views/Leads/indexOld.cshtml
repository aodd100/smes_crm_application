@model IEnumerable<db.crmdb.dbData.LEAD>

@{
    ViewBag.Title = "New Leads";
    Layout = "~/Views/_LayoutPage.cshtml";

}


@section SideBar {
    <a class="sidebtn" id="crm" href="/Leads/create">New Leads</a>
    <a class="sidebtn" ID="hr">Advance Search</a>
}
<h1>List Of Leads</h1>
<table class="table" style="z-index:5;position:absolute;top:26px;width:82%;text-align:center;vertical-align:middle;filter: DropShadow(Color=#333333, OffX=1, OffY=1, Positive=true)">
    <tr>
        <th class="GridTitle">
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th class="GridTitle">
            @Html.DisplayNameFor(model => model.PHONE)
        </th>
        <th class="GridTitle">
            @Html.DisplayNameFor(model => model.FAX)
        </th>
        <th class="GridTitle">
            @Html.DisplayNameFor(model => model.EMAIL)
        </th>
        <th class="GridTitle"></th>
    </tr>
    @if (Model.Any())
    {

        foreach (var item in Model)
        {
            <tr>
                <td class="GridItem GridItemHlip">
                    @Html.DisplayFor(modelItem => item.NAME)
                </td>
                <td class="GridItem GridItemHlip">
                    @Html.DisplayFor(modelItem => item.PHONE)
                </td>
                <td class="GridItem GridItemHlip">
                    @Html.DisplayFor(modelItem => item.FAX)
                </td>
                <td class="GridItem GridItemHlip">
                    @Html.DisplayFor(modelItem => item.EMAIL)
                </td>
                <td class="GridItem">
                    @Html.ActionLink("Edit", "Edit", new { id = item.COMPANYID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.COMPANYID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.COMPANYID })
                </td>
            </tr>
        }

    }
    else
    {
        <tr>
            <td class="GridItem GridItemHlip">
                <span style="color:red"> The are no records at the moment, please check back</span>
            </td>
        </tr>

    }

    <tr>
        <td id="footerTd" class="GridTitle" colspan="10">
            Records:&nbsp;<span id="Elements">@Model.Count()</span>&nbsp;
            &nbsp;
            &nbsp;

        </td>

    </tr>
</table>
